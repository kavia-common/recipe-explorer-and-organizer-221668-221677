# Frontend environment variables (.env.example)
# Copy this file to `.env` and adjust values as needed. Do not commit secrets.

# Required
# Preferred API base URL for backend REST API calls. Trailing slashes are removed automatically.
REACT_APP_API_BASE=http://localhost:8080

# CRA dev server typically runs on port 3000; this documents the intended port for tooling.
# Note: CRA actually uses the shell variable PORT to control its dev server port.
REACT_APP_PORT=3000

# Client-side log level: debug | info | warn | error
REACT_APP_LOG_LEVEL=info

# Comma-separated list or JSON-like string of feature flags to toggle features on/off
REACT_APP_FEATURE_FLAGS=

# Optional
# Fallback API base URL if REACT_APP_API_BASE is not set.
REACT_APP_BACKEND_URL=

# Public URL of the frontend (useful for absolute links in some deployments)
REACT_APP_FRONTEND_URL=

# WebSocket URL if applicable (ws:// or wss://)
REACT_APP_WS_URL=

# Mirrors runtime environment for client code branching (CRA also exposes NODE_ENV)
REACT_APP_NODE_ENV=development

# Disable telemetry in certain environments (kept for parity across tooling)
REACT_APP_NEXT_TELEMETRY_DISABLED=1

# Toggle production source maps in CI/CD as needed
REACT_APP_ENABLE_SOURCE_MAPS=true

# Trust proxy indicator for proxied deployments (not used by CRA by default)
REACT_APP_TRUST_PROXY=false

# Healthcheck path for hosting platforms (informational; frontend is static)
REACT_APP_HEALTHCHECK_PATH=/healthz

# High-level switch to enable experiments
REACT_APP_EXPERIMENTS_ENABLED=false

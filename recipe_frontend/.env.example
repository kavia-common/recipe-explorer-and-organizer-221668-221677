# Frontend environment variables for Recipe Explorer (do not commit real secrets)
# Base URL for backend API (preferred)
REACT_APP_API_BASE=http://localhost:4000
# Optional fallback if API_BASE is not set
REACT_APP_BACKEND_URL=http://localhost:4000

# Frontend app URL (used by some integrations/redirects)
REACT_APP_FRONTEND_URL=http://localhost:3000
# Optional WebSocket base URL if backend provides WS
REACT_APP_WS_URL=ws://localhost:4000

# Runtime environment
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=true

# Server port when running locally (Create React App typically uses 3000)
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false

# Logging level for client (e.g., debug, info, warn, error)
REACT_APP_LOG_LEVEL=info

# Healthcheck path for deployment environments
REACT_APP_HEALTHCHECK_PATH=/healthz

# Feature flags (comma-separated list or JSON; consumer should parse as needed)
REACT_APP_FEATURE_FLAGS=notes,favorites,search

# Enable experimental UI/features (boolean)
REACT_APP_EXPERIMENTS_ENABLED=false
